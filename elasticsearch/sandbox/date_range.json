{
  "size": 0,
  "query": {
    "bool": {
      "filter": [
        {
          "range": {
            "date": {
              "from": "now",
              "to": "now-1d"
            }
          }
        }
      ]
    }
  },
  "aggs": {
    "the_interval": {
      "date_histogram": {
        "field": "date",
        "interval": "15m"
      },
      "aggs": {
        "the_open": {
          "top_hits": {
            "sort": [
              {
                "date": {
                  "order": "asc"
                }
              }
            ],
            "_source": {
              "includes": [
                "date",
                "timestamp",
                "open"
              ]
            },
            "size": 1
          }
        },
        "the_close": {
          "top_hits": {
            "sort": [
              {
                "date": {
                  "order": "desc"
                }
              }
            ],
            "_source": {
              "includes": [
                "date",
                "timestamp",
                "close"
              ]
            },
            "size": 1
          }
        },
        "the_high": {
          "max": {
            "field": "high"
          }
        },
        "the_low": {
          "max": {
            "field": "low"
          }
        },
        "the_volumefrom": {
          "sum": {
            "field": "volumefrom"
          }
        },
        "the_volumeto": {
          "sum": {
            "field": "volumeto"
          }
        }
      }
    }
  }
}